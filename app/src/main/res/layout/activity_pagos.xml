<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pagos">

    <ScrollView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="276dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="20dp"
                android:text="PAGA TUS FACTURAS"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="60dp"
                android:text="Tipo de factura"
                android:textSize="16dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spSer"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="30dp"
                android:text="Digite el nÃºmero de factura"
                android:textSize="16dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etFactura"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="4dp"
                android:digits="1234567890"
                android:ems="10"
                android:hint="ej: 1234567890"
                android:inputType="number"
                android:maxLength="10"
                android:textColorHint="#45DFDFDF" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="30dp"
                android:text="Digite el valor a pagar"
                android:textSize="16dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etValor"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="4dp"
                android:digits="1234567890"
                android:ems="10"
                android:hint="ej: 86000"
                android:inputType="number"
                android:textColorHint="#45DFDFDF" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="30dp"
                android:text="Confirme el valor apagar"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etValorCon"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="4dp"
                android:digits="1234567890"
                android:ems="10"
                android:hint="ej: 86000"
                android:inputType="number"
                android:textColorHint="#45DFDFDF" />

            <Button
                android:id="@+id/btnPagar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:text="Pagar factura" />

            <Button
                android:id="@+id/btnRegresar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-48dp"
                android:layout_marginLeft="220dp"
                android:text="Regresar" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>